<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="@dimen/item_calendar_size"
    android:layout_columnWeight="1"
    tools:layout_width="@dimen/item_calendar_size"
    android:background="@drawable/background_item_calendar"
    android:elevation="@dimen/def_elevation"
    android:layout_margin="@dimen/padding_for_shadow"
    >

    <View
        android:id="@+id/progress_background"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_day_progress"
        android:backgroundTint="#575757"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/progress_front"
        android:layout_width="6dp"
        android:layout_height="30dp"
        android:background="@drawable/background_day_progress"
        app:layout_constraintBottom_toBottomOf="@id/progress_background"
        app:layout_constraintEnd_toEndOf="@id/progress_background"
        app:layout_constraintStart_toStartOf="@id/progress_background"
        tools:backgroundTint="#18AA52" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:includeFontPadding="false"
        android:textColor="@color/def_text_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/tv_time"
        app:layout_constraintEnd_toStartOf="@id/progress_background"
        app:layout_constraintTop_toTopOf="@id/progress_background"
        tools:text="25" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:includeFontPadding="false"
        android:lines="2"
        android:textColor="@color/def_text_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/tv_date"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        tools:text="7h\n15m" />


</androidx.constraintlayout.widget.ConstraintLayout>
