<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    style="@style/ItemListProject"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingHorizontal="@dimen/def_margin"
    >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/def_text_color"
        android:textColorHint="@color/hint_text_color"
        android:backgroundTint="@color/def_text_color"
        android:inputType="text"
        android:lines="1"
        android:textSize="@dimen/item_project_text_size"
        android:hint="@string/project_hint"
        android:layout_centerVertical="true"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_check"
        android:background="@android:color/transparent"
        />
</RelativeLayout>
